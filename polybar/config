[colors]
foreground = #eceff4
background = #2e3440
red = #bf616a
foreground-alt = ${xrdb:color7:#222}
primary = ${xrdb:color7:#222}
secondary = ${xrdb:color2:#222}
alert = #bf616a
focused = ${xrdb:color5:#222}
unfocused = ${xrdb:color1:#222}

[bar/top]
enable-ipc = true
bottom = false
monitor = DP-2
width = 100%
height = 22
dpi = 192
background = ${colors.background}
foreground = ${colors.foreground}
padding-left = 0
padding-right = 0
module-margin-left = 2
module-margin-right = 2
separator =
modules-left = i3
modules-center = date
modules-right = docker
font-0 = Terminus (TTF):size=6;0

wm-restack = i3
tray-position = none
tray-scale = 1.0
tray-background = ${self.background}
tray-maxsize = 16
tray-offset-y = 0
tray-padding = 0
overline-size = 0
overline-color = ${self.foreground}
underline-color = ${self.foreground}
underline-size = 2
scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

[bar/bottom]
enable-ipc = true
bottom = true
monitor = DP-2
width = 100%
height = 22
dpi = 192
background = ${colors.background}
foreground = ${colors.foreground}
line-size = 1
padding-left = 1
padding-right = 1
module-margin-left = 1
module-margin-right = 1
separator = |
font-0 = Terminus (TTF):size=6:2
overline-size = 1
underline-size = 0
underline-color = ${colors.alert}
modules-left = volume dirty memory cpu_temp nvme_temp vpn work
modules-center = clock
modules-right =
wm-restack = i3

[module/memory]
type = custom/script
exec = ~/.config/polybar/scripts/memory
format = <label>
format-padding = 1
label = MEM %output%
interval = 10

[module/volume]
type = internal/pulseaudio
sink = alsa_output.usb-PreSonus_PreSonus_AudioBox_iTwo_AB5C14101903-00.analog-stereo
format-volume = VOL <label-volume>
format-volume-padding = 1
label-muted = VOL
format-muted-padding = 1

[module/dirty]
type = custom/script
exec = ~/.config/polybar/scripts/dirty
format = <label>
format-padding = 1
label = USB %output%
interval = 1

[module/cpu_temp]
type = custom/script
exec = ~/.config/polybar/scripts/cpu_temp
format = <label>
format-padding = 1
label = CPU %output%°C
interval = 5

[module/nvme_temp]
type = custom/script
exec = ~/.config/polybar/scripts/nvme_temp
format = <label>
format-padding = 1
label = NVME %output%°C
interval = 5

[module/vpn]
type = custom/script
exec = pgrep openvpn
interval = 3
label = VPN
format-padding = 1

[module/work]
type = custom/script
exec = echo work
exec-if = ip addr show | grep 11.11.11
format = <label>
label = WORK VPN
interval = 5
format-padding = 1

[module/docker]
type = custom/script
exec = ~/.config/polybar/scripts/dockers
format = <label>
label = %output%
interval = 5
format-padding = 1

[module/clock]
type = custom/script
exec = ~/.config/polybar/scripts/clock.sh
interval = 5
format = <label>
label = %output%

[module/date]
type = custom/script
exec = ~/.config/polybar/scripts/date.sh
interval = 5
format = <label>
label = %output%


[module/i3]
type = internal/i3

pin-workspaces = true
strip-wsnumbers = true
index-sort = true

fuzzy-match = false

ws-icon-0 = 0;web
ws-icon-1 = 1;down
ws-icon-2 = 2;sys
ws-icon-3 = 3;git
ws-icon-4 = 4;mola
ws-icon-5 = 5;cb:a
ws-icon-6 = 6;cb:b
ws-icon-7 = 7;nf:a
ws-icon-8 = 8;nf:b
ws-icon-9 = 9;nf:c
ws-icon-10 = 10;com
ws-icon-11 = 11;-
ws-icon-12 = 12;-
ws-icon-13 = 13;-
ws-icon-14 = 14;-
ws-icon-15 = 15;-
ws-icon-16 = 16;-
ws-icon-17 = 17;-
ws-icon-18 = 18;-
ws-icon-19 = 19;-
ws-icon-20 = 20;-
ws-icon-21 = 21;-

wrapping-scroll = false

label-dimmed-underline = ${colors.foreground}

format = <label-state> <label-mode>

label-mode = %mode%
label-mode-padding = 1
label-mode-foreground = ${colors.foreground}
label-mode-background = #00000000
label-focused = %icon%
label-focused-underline = ${colors.foreground}
label-focused-padding = 1
label-unfocused = %icon%
label-unfocused-padding = 1
label-unfocused-foreground = ${colors.foreground}
label-visible = %icon%
label-visible-padding = 1
label-urgent = %icon%
label-urgent-underline = ${colors.alert}
label-urgent-padding = 1
label-separator = 
label-separator-padding = 0
label-separator-foreground = ${colors.foreground}
